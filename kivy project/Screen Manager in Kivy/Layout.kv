#:import SlideTransition kivy.uix.screenmanager.SlideTransition

<RootScreen>:
    transition: SlideTransition()
    ScreenOne:
        name: 'Layar 1'
    ScreenTwo:
        name: 'Layar 2'
    ScreenThree:
        name: 'Layar 3'
    ScreenFour:
        name: 'Layar 4'

<CustGridLayout@GridLayout>:
    cols: 2
    size_hint_y: None
    height: dp(100)

<ScreenOne>:
    GridLayout:
        rows: 2
        Image:
            source: 'img/Andhika.jpg'
        
        CustGridLayout:
            Button:
                text: 'Foto'
                on_press:
                    root.manager.transition.duration = 0.5
                    root.manager.current = 'Layar 1'
            Button:
                text: 'Nama'
                on_press:
                    root.manager.transition.duration = 0.5
                    root.manager.current = 'Layar 2'
            Button:
                text: 'Jurusan'
                on_press:
                    root.manager.transition.duration = 0.5
                    root.manager.current = 'Layar 3'
            Button:
                text: 'Komik Favorit'
                on_press:
                    root.manager.transition.duration = 0.5
                    root.manager.current = 'Layar 4'

