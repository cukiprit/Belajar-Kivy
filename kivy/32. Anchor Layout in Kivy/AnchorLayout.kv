<MyButton@Button>:
    size_hint: [None, None]
    size: [100, 100]

<Anchor_Layout>:
    rows: 3
    AnchorLayout:
        anchor_x: 'left'
        anchor_y: 'top'

        canvas:
            Color:
                rgb: [.5, .324, .384]
            Rectangle:
                pos: self.pos
                size: self.size

        MyButton:
            text: 'Button 1'

    AnchorLayout:
        anchor_x: 'center'
        anchor_y: 'top'

        canvas:
            Color:
                rgb: [.5, .692, .498]
            Rectangle:
